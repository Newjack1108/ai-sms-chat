# CRM-Integrated SMS System Environment Variables
# Copy this file to .env and fill in your actual values

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ASSISTANT_ID=asst_your_assistant_id_here

# Server Configuration
PORT=3000

# Reminder System Testing (optional)
# Set to 'true' for fast testing (30sec/60sec/90sec intervals instead of 1hr/24hr/48hr)
# REMINDER_TEST_MODE=true

# Optional: Database Configuration (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/sms_crm

# Optional: JWT Secret (for production authentication)
# JWT_SECRET=your_jwt_secret_here

# Optional: Session Secret (for production)
# SESSION_SECRET=your_session_secret_here

# Admin Authentication (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Sales App Integration (Production - push products to sales app)
# SALES_APP_API_URL=https://your-sales-app.example.com/api/products
# SALES_APP_API_KEY=your_api_key_or_bearer_token
# - Used when pushing products TO the sales app (Authorization: Bearer)
# - Same key used for INBOUND webhook auth: sales app calls POST /production/api/sales/product-sold
#   with Authorization: Bearer <key> or X-Webhook-Secret: <key> to create works orders on sale

# LeadLock Work Order Webhook (Production - receive orders from LeadLock sales app)
# LEADLOCK_WEBHOOK_API_KEY=<same_value_as_leadlock_PRODUCTION_APP_API_KEY>
# - Add this to Railway: Same secret value as LeadLock's PRODUCTION_APP_API_KEY
# - LeadLock sends POST to /api/webhooks/work-orders or /production/api/webhooks/work-orders
# - Auth: Authorization: Bearer <key>